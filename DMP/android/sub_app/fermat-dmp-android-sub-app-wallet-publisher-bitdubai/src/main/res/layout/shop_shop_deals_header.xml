<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView android:id="@+id/deal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="type of deal"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_weight="1"/>
    <TextView android:id="@+id/deal_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="status"
        android:textSize="14sp"
        android:textStyle="normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/deal_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deal start"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textStyle="normal"/>
        <TextView android:id="@+id/deal_end"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="deal end"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">
        <TextView android:id="@+id/deal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deal description"
            android:textSize="14sp"
            android:textStyle="normal"/>
        </LinearLayout>
</LinearLayout>